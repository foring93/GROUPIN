<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="Prs">

    <select id="count" resultType="int">
        select count(*) from PrBoard 
    </select>

	<select id="boardList" parameterType="java.util.Map" resultType="prboard">
	  <![CDATA[	select * from PrBoard order by prKey desc ]]>
	</select>
	
<!-- select * from (select * rownum rnum, p.* from (select * from PrBoard order by prKey desc) p) where rnum >= #{start} and rnum <= #{end} -->

    <insert id="insert" parameterType="prboard">
        insert into PrBoard(
           prKey, userKey, groupKey, content, datewrite)    
        values (#{prKey}, #{userKey}, #{groupKey}, #{content}, sysdate)
    </insert>

    <select id="Detail" parameterType="int" resultType="prboard">
        select * from board where userKey = #{userKey}
    </select>
    
    <update id="modify" parameterType="prboard">
        update PrBoard
        set groupKey = #{groupKey},
            content = #{content}
        where prKey = #{prKey}
    </update>

    <select id="boardWriter" parameterType="int" resultType="prboard">
        select * from PrBoard
        where userKey = #{userKey}
    </select>
   
    <select id="info" parameterType="String" resultType="group">
         select groupName from GGroup where userKey = (select userKey from GUsers where userId = #{id})
    </select>
</mapper>